extends layout

block content
  h1= title
  //- - const petrol = ['petrol_type','quantity','cost']
  - let items = results;
  - let o;
  script.
    function buy(x){
      alert('purchased item ' + x)
   } 
  div(class='container-fluid')
    a(href = "petrol/create") create
    div(class='row')
      each o, index in items
        div(class='col-sm-3' onclick='buy('+index+')') #{o}
        a(href = "petrol/detail/?id=" + o._id) detail

        a(href = "petrol/update/?id=" + o._id) update

        a(href = "petrol/delete/?id=" + o._id) delete 